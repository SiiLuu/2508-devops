{
  "packageManager": "pnpm@9.15.5",
  "devDependencies": {
    "husky": "^9.1.7",
    "npm-audit-html": "^1.5.0",
    "turbo": "^2.5.6"
  },
  "scripts": {
    "lint": "turbo run lint --affected",
    "test": "turbo run test --affected",
    "build": "turbo run build --affected",
    "dev": "turbo run dev",
    "prepare": "husky",
    "audit-report": "pnpm audit --json  | npm-audit-html --output audit-report.html",
    "trivy-report": "trivy fs . --severity CRITICAL,HIGH --output trivy-report.txt"
  }
}
